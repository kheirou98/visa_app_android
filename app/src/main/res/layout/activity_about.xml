<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_apropos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".controller.About"
                android:background="@drawable/market">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/marche"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/version"
                android:textSize="18sp"
                android:textColor="#FC3D03"
                android:textStyle="bold|normal"
                android:text="Version : v 1.00"
                android:fontFamily="@font/roboto"/>

        <TextView
                android:text="MARKETEL est une entreprise située à 39, Rue de la madeleine Hydra Alger, 16000.\nCette application mobile a été développée pour la géolocalisation."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/textView14" android:fontFamily="@font/open_sans_condensed_bold"/>


        <TextView
                android:text="Cette application mobile a été développée par:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|normal"
                android:id="@+id/textView13"
                android:textSize="17sp"
                android:textColor="#FC3D03" android:fontFamily="@font/roboto"/>

        <TextView
                android:text="MEDKOUR Kheir Eddine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:id="@+id/aproposTXT"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:fontFamily="@font/open_sans_condensed_bold"/>

        <TextView
                android:text="Notez notre Application ici:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textAlignment="textStart"
                android:textStyle="normal|bold"
                android:textColor="#EE3D06"
                android:textSize="20sp" android:fontFamily="@font/roboto"/>

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:outlineSpotShadowColor="#F8DF74"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

            <Button
                    android:id="@+id/button4"
                    android:background="@drawable/facebook"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    android:onClick="facebook" tools:ignore="OnClick"/>

            <Button
                    android:id="@+id/button"
                    android:background="@drawable/www"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    android:onClick="website" tools:ignore="OnClick"/>
            <Button
                    android:id="@+id/button5"
                    android:background="@drawable/ic_location_on_black_24dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    android:onClick="maps"
                    tools:ignore="OnClick"/>
            <Button
                    android:id="@+id/button6"
                    android:background="@drawable/telephone"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    android:onClick="tel"
                    tools:ignore="OnClick"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
