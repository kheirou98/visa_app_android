<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        tools:context=".controller.accueil">
    <android.support.design.widget.TextInputLayout
            android:theme="@style/TextInputLayoutAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#FFFFFF"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="0.308"
            android:id="@+id/textInputLayout">

        <EditText
                android:id="@+id/identifiant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textColorHint="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:hint="Identifiant"
                android:ems="20"
                android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:theme="@style/TextInputLayoutAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            tools:layout_editor_absoluteX="-16dp"
            app:layout_constraintVertical_bias="0.411"
            android:id="@+id/textInputLayout2" app:layout_constraintTop_toTopOf="parent">

        <EditText
                android:id="@+id/mdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textColorHint="#FCFCFB"
                android:hint="Mot de passe"
                android:backgroundTint="#FFFFFF"
                android:ems="20"
                android:inputType="textPassword"
        />
    </android.support.design.widget.TextInputLayout>
    <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se souvenir de moi"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:buttonTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraint3"/>
    <TextView
            android:id="@+id/mdpoublie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/motdepasseoublie"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="viewEnd"
            android:textColor="#97CBF5"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.554"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/constraint3"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:context=".controller.MainActivity"
            tools:ignore="MissingConstraints">

        <TextView
                android:text="Se connecter"
                android:textAlignment="center"
                android:background="#0A297B"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/open_sans_condensed_bold"
                android:textSize="20dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="match_parent"
                android:id="@+id/connecter"
                tools:ignore="RtlCompat"/>

        <TextView
                android:text="CrÃ©er un compte"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="#2196F3"
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans_condensed_bold"
                android:gravity="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="match_parent"
                android:id="@+id/creer"
                tools:ignore="RtlCompat"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>