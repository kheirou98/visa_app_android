<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blanccasse"
        tools:context=".controller.Documents">
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/recylerviewdocuments"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/bottomNav"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:id="@+id/scannedImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="0.148"/>

    <TextView
            android:id="@+id/identi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="160dp"
            android:textStyle="bold|normal|italic"
            android:fontFamily="@font/roboto"
            android:text="Veuillez introduire le nom du fichier"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000000"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scannedImage"
            app:layout_constraintVertical_bias="0.705"/>

    <EditText
            android:id="@+id/nomfile"
            android:layout_width="wrap_content"
            android:focusable="false"
            android:editable="false"
            android:textColor="#000000"
            android:theme="@style/TextInputLayoutAppearance2"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:ems="20"
            android:inputType="textPersonName"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/identi"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="148dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintVertical_bias="0.815"/>

    <Button
            android:id="@+id/confirmer"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="88dp"
            android:text="Confirmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomfile"
            android:visibility="invisible"
            app:layout_constraintVertical_bias="0.68"/>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_navigation_main"
            tools:layout_editor_absoluteX="16dp" />
</android.support.constraint.ConstraintLayout>