<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.Documents_Detail">
    <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            tools:srcCompat="@tools:sample/avatars"
            android:gravity="center"
            android:id="@+id/imageViewdoc"
            tools:ignore="MissingConstraints" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/textViewdoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="14sp"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewdoc"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:textColor="#fff"
            android:id="@+id/okdocs"
            android:background="@drawable/ic_check_black_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.907"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavDocs"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="184dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavDocs"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_navigation_main_doc"
            tools:layout_editor_absoluteX="16dp" />
</android.support.constraint.ConstraintLayout>