<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.profil"
        android:background="@drawable/bleu"
        android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:background="@drawable/gradientbackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:id="@+id/imgprofil"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_account_box_black_24dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/ic_account_circle_black_24dp"/>
                <EditText
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/open_sans_condensed_bold"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:inputType="textCapCharacters"
                        android:text="MEDKOUR Kheir Eddine"
                        android:theme="@style/TextInputLayoutAppearance2"
                        android:enabled="false"
                        android:id="@+id/ed1"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="21sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/ic_account_circle_black_24dp"/>
                <EditText
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEDKOUR Kheir Eddine"
                        android:fontFamily="@font/open_sans_condensed_bold"
                        android:theme="@style/TextInputLayoutAppearance2"
                        android:enabled="false"
                        android:id="@+id/edprenom"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="21sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/ic_local_phone_black_24dp"/>
                <EditText
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0559861954"
                        android:fontFamily="@font/open_sans_condensed_bold"
                        android:theme="@style/TextInputLayoutAppearance2"
                        android:inputType="number"
                        android:enabled="false"
                        android:id="@+id/ed2"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="21sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">
        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_info_black_24dp"/>
            <EditText
                    android:textStyle="bold"
                    android:id="@+id/ed3"
                    android:fontFamily="@font/open_sans_condensed_bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:enabled="false"
                    android:textColor="#070707"
                    android:theme="@style/TextInputLayoutAppearance2"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:text="25463455633"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_email_black_24dp"/>
            <EditText
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/ed4"
                    android:fontFamily="@font/open_sans_condensed_bold"
                    android:layout_width="wrap_content"
                    android:enabled="false"
                    android:textColor="#070707"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:theme="@style/TextInputLayoutAppearance2"
                    android:paddingLeft="20dp"
                    android:text="kouba"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_home_black_24dp"/>
            <EditText
                    android:textStyle="bold"
                    android:id="@+id/ed5"
                    android:fontFamily="@font/open_sans_condensed_bold"
                    android:enabled="false"
                    android:clickable="false"
                    android:textColor="#070707"
                    android:layout_gravity="center_vertical"
                    android:theme="@style/TextInputLayoutAppearance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Alger"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:textColor="#fff"
            android:id="@+id/modify"
            android:background="@drawable/buttonstyleithgradient"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="Modifier"/>
    <Button
            android:textColor="#fff"
            android:id="@+id/ok"
            android:background="@drawable/ic_check_black_24dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
    />
</LinearLayout>