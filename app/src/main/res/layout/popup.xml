<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:windowNoTitle="true"
    android:background="@drawable/blanccasse"
    android:layout_height="200dp">

    <TextView
            android:id="@+id/identi"
            android:layout_width="125dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="156dp"
            android:fontFamily="@font/roboto"
            android:text="Identifiant:"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
    />

    <EditText
            android:id="@+id/identif"
            android:layout_width="200dp"
            android:theme="@style/TextInputLayoutAppearance2"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/identi"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.041"
            android:layout_marginBottom="148dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/mdp"
            android:layout_width="125dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="112dp"
            android:fontFamily="@font/roboto"
            android:text="Nouveau MDP:"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:id="@+id/mdpnew"
            android:layout_width="200dp"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:theme="@style/TextInputLayoutAppearance2"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textPassword"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/mdp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.041"
            android:layout_marginBottom="100dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/mdpconfirme"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="64dp"
            android:fontFamily="@font/roboto"
            android:text="Confirmation du nouveau MDP:"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:id="@+id/mdpnewconfirme"
            android:layout_width="200dp"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:theme="@style/TextInputLayoutAppearance2"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/mdpconfirme"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.041"
            android:layout_marginBottom="64dp"
            android:layout_marginEnd="16dp"/>
    <Button
            android:id="@+id/confirmer"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="1dp"
            android:text="Confirmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.245"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mdpconfirme"
            app:layout_constraintVertical_bias="0.16"/>

    <Button
            android:id="@+id/quitter"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="1dp"
            android:text="Quitter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.286"
            app:layout_constraintStart_toEndOf="@+id/confirmer"
            app:layout_constraintTop_toBottomOf="@+id/mdpnewconfirme"
            app:layout_constraintVertical_bias="0.16"/>

</android.support.constraint.ConstraintLayout>